<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="puc.iot.smarttraffic.smarttraffictransmitter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_sirene"
        android:label="Smart Traffic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-permission android:name="android.permission.BLUETOOTH" />
        <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

        <activity
            android:name=".settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="puc.iot.smarttraffic.smarttraffictransmitter.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="puc.iot.smarttraffic.smarttraffictransmitter.MainActivity" />
        </activity>
    </application>

</manifest>